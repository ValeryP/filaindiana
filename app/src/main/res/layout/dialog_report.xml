<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_dialogReport_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <ImageView
        android:id="@+id/layout_dialogReport_img"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/carrefour"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/layout_dialogReport_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:shadowColor="@color/colorTextBlack"
        android:textColor="@color/colorTextBlack"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_dialogReport_img"
        tools:text="Carrefour Market Carrefour Market Carrefour Market " />

    <TextView
        android:id="@+id/layout_dialogReport_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:shadowColor="@color/colorTextDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_dialogReport_name"
        tools:text="Via Bergamo, 10, Milano" />

    <TextView
        android:id="@+id/layout_dialogReport_openHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:shadowColor="@color/colorTextDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_dialogReport_address"
        tools:text="Open: 07:30 - 20:00" />

    <TextView
        android:id="@+id/layout_dialogReport_queueSizeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="@string/how_many_people_are_there_in_the_queue"
        app:layout_constraintBottom_toTopOf="@+id/layout_dialogReport_queueSizeSeekbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_dialogReport_openHours" />

    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/layout_dialogReport_queueSizeSeekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:isb_indicator_color="@color/colorAccent"
        app:isb_indicator_text_color="@color/colorTextWhite"
        app:isb_indicator_text_size="18sp"
        app:isb_max="100"
        app:isb_min="0"
        app:isb_only_thumb_draggable="false"
        app:isb_progress="10"
        app:isb_show_indicator="rounded_rectangle"
        app:isb_show_thumb_text="true"
        app:isb_show_tick_marks_type="oval"
        app:isb_show_tick_texts="true"
        app:isb_thumb_color="@color/colorPrimary"
        app:isb_thumb_size="20dp"
        app:isb_tick_marks_size="13dp"
        app:isb_tick_texts_color="@color/colorPrimary"
        app:isb_tick_texts_size="15sp"
        app:isb_track_background_color="@color/colorButtonGrey"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_color="@color/colorAccent"
        app:isb_track_progress_size="4dp"
        app:layout_constraintEnd_toEndOf="@+id/layout_dialogReport_queueSizeTitle"
        app:layout_constraintStart_toStartOf="@+id/layout_dialogReport_queueSizeTitle"
        app:layout_constraintTop_toBottomOf="@+id/layout_dialogReport_queueSizeTitle" />

    <TextView
        android:id="@+id/layout_dialogReport_queueTimeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/how_long_do_you_think_the_queue_will_last"
        app:layout_constraintEnd_toEndOf="@+id/layout_dialogReport_queueSizeTitle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/layout_dialogReport_queueSizeTitle"
        app:layout_constraintTop_toBottomOf="@+id/layout_dialogReport_queueSizeSeekbar" />

    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/layout_dialogReport_queueTimeSeekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:isb_indicator_color="@color/colorAccent"
        app:isb_indicator_text_color="@color/colorTextWhite"
        app:isb_indicator_text_size="18sp"
        app:isb_max="60"
        app:isb_min="0"
        app:isb_only_thumb_draggable="false"
        app:isb_progress="10"
        app:isb_show_indicator="rounded_rectangle"
        app:isb_show_thumb_text="true"
        app:isb_show_tick_marks_type="oval"
        app:isb_show_tick_texts="true"
        app:isb_thumb_color="@color/colorPrimary"
        app:isb_thumb_size="20dp"
        app:isb_tick_marks_size="13dp"
        app:isb_tick_texts_color="@color/colorPrimary"
        app:isb_tick_texts_size="15sp"
        app:isb_track_background_color="@color/colorButtonGrey"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_color="@color/colorAccent"
        app:isb_track_progress_size="4dp"
        app:layout_constraintEnd_toEndOf="@+id/layout_dialogReport_queueTimeTitle"
        app:layout_constraintStart_toStartOf="@+id/layout_dialogReport_queueTimeTitle"
        app:layout_constraintTop_toBottomOf="@+id/layout_dialogReport_queueTimeTitle" />

    <Button
        android:id="@+id/layout_dialogReport_button_report"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/colorPrimary"
        android:minWidth="150dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="@string/send_report"
        android:textColor="@color/colorTextWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_dialogReport_queueTimeSeekbar" />

</androidx.constraintlayout.widget.ConstraintLayout>